@model List<Note>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 text-end">
            <h1>Notes</h1>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Note" asp-action="Create" class="btn btn-primary">Create Note</a>
        </div>
    </div>
    <table class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Content
                </th>
                <th>
                    Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.content
                    </td>
                    <td width="50%">
                        @obj.createdAt
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>